#version 330 core
layout (location = 0) in vec3 aPos;
layout (location = 1) in vec3 aNormal;
layout (location = 2) in vec3 aTextureCoords;

out vec3 VerCoords;
out vec3 Normal;
out vec3 Direction;

uniform mat4 model;
layout (std140) uniform Matrices
{
    mat4 projection;
    mat4 view;
};

void main()
{
	VerCoords = aPos;
	Normal = transpose(inverse(mat3(model))) * aPos;
	Direction = vec3(model * vec4(aPos, 1.0));	
    gl_Position = projection * view * model * vec4(aPos, 1.0);
}